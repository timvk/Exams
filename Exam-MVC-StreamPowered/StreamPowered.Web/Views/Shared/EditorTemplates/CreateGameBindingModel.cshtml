@using StreamPowered.Web.Models.Game
@model CreateGameBindingModel
    
<div class="form-group">
    <label for="title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label for="title" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
    </div>
</div>
<div class="form-group">
    <label for="title" class="col-sm-2 control-label">System Requirements</label>
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.SystemRequirements, new { @class = "form-control", rows = 4 })
    </div>
</div>
@Html.AntiForgeryToken()

