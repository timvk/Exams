@using StreamPowered.Web.Models.Review
@model ReviewBindingModel
           
@using (@Html.BeginForm("AddReview", "Reviews", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        <div class="">
            <p>Add a review: </p>
            @Html.TextAreaFor(r => r.Content, htmlAttributes: new { @class = "form-control", rows = 3, @placeholder = "Write a review..." })
            @Html.ValidationMessageFor(r => r.Content, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.HiddenFor(r => r.GameId, new { @Value = Model.GameId })
            <input class="btn btn-primary" type="submit" value="Add" />
        </div>
    </div>
}